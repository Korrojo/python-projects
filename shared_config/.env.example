# ============================================================================
# Additional Configuration (Optional)
# ============================================================================

# Logging configuration
# LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# MongoDB connection options
# MONGODB_CONNECT_TIMEOUT=5000
# MONGODB_SERVER_SELECTION_TIMEOUT=5000

# Application settings
# MAX_WORKERS=4
# BATCH_SIZE=1000

# ============================================================================
# Email Notification Configuration (For Orchestration Workflows)
# ============================================================================

# Enable/disable email notifications (true/false)
EMAIL_NOTIFICATIONS_ENABLED=false

# Email recipients (comma-separated)
EMAIL_RECIPIENTS=admin@example.com,ops@example.com

# Email sender information
EMAIL_SENDER=noreply@example.com
EMAIL_SENDER_NAME=Application Notification System

# SMTP server configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USE_TLS=true

# SMTP authentication
SMTP_USERNAME=<smtp_username>
SMTP_PASSWORD=<smtp_password>

# Email subject prefixes
EMAIL_SUBJECT_PREFIX=[APP]

# Environment name to include in emails (optional, defaults to APP_ENV)
EMAIL_ENV_NAME=Development
