# MongoDB PHI Masker - Environment Variables Example
# Copy this file to .env and fill in your actual values

# Source MongoDB Configuration
MONGO_SOURCE_HOST=localhost
MONGO_SOURCE_PORT=27017
MONGO_SOURCE_USER=
MONGO_SOURCE_PASSWORD=
MONGO_SOURCE_DB=source_database
MONGO_SOURCE_COLL=source_collection
MONGO_SOURCE_AUTH_DB=admin

# Destination MongoDB Configuration
MONGO_DEST_HOST=localhost
MONGO_DEST_PORT=27017
MONGO_DEST_USER=
MONGO_DEST_PASSWORD=
MONGO_DEST_DB=destination_database
MONGO_DEST_COLL=destination_collection
MONGO_DEST_AUTH_DB=admin

# Verification Scripts
# URI for verification scripts (verify_masking.py, simple_verify.py)
# Format: mongodb+srv://user:password@host/database?authSource=admin&ssl=true
MONGO_VERIFY_URI=

# Processing Configuration
BATCH_SIZE=100
PROCESSING_DOC_LIMIT=9999999999

# Email Alerts (optional)
EMAIL_ENABLED=false
EMAIL_SENDER=
EMAIL_PASSWORD=
EMAIL_RECIPIENT=
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# Logging Configuration
MONGO_PHI_LOG_LEVEL=INFO
MONGO_PHI_LOG_MAX_BYTES=10485760
MONGO_PHI_LOG_BACKUP_COUNT=5
MONGO_PHI_LOG_TIMED_ROTATION=false
