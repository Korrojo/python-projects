{
    "mongodb": {
        "source": {
            "uri": "${MONGO_SOURCE_URI}",
            "database": "${MONGO_SOURCE_DB}",
            "collection": "${MONGO_SOURCE_COLL}"
        },
        "destination": {
            "uri": "${MONGO_DEST_URI}",
            "database": "${MONGO_DEST_DB}",
            "collection": "${MONGO_DEST_COLL}"
        }
    },
    "processing": {
        "masking_mode": "separate",
        "batch_size": {
            "initial": 50,
            "min": 10,
            "max": 200
        }
    },
    "masking": {
        "rules_path": "config/masking_rules/rules.json",
        "default_rules": "config/masking_rules/rules.json",
        "collection_groups": {
            "0": [
                "AD_Container_20250821_1k",
                "AD_Container_20250821_2k",
                "Container",
                "Patients",
                "PatientsMovedToLocalOutreach",
                "Patients_Dat_Audio_Location_Reset"
            ],
            "1": [
                "Appointments",
                "PCP",
                "PCPHistory",
                "PatientNotesHistory",
                "PatientPanel",
                "PatientPcpConfirmDirectEmailDetails"
            ],
            "2": [
                "PatientCarePan_StartDate",
                "PatientCarePlan",
                "PatientCarePlanHistory",
                "PatientCarePlanResetStartDate"
            ],
            "4": [
                "MobileAppRegistrationHistory",
                "PatientInsuranceHistory"
            ],
            "5": [
                "FaxTransactions",
                "PatientReportFaxQueue",
                "PatientReportFaxQueueHistory"
            ],
            "6": [],
            "7": [
                "ExternalReferralFax",
                "Messages",
                "ReEngagingClosedPatientsProcessEntries"
            ],
            "8": [
                "AutoMedicalRecordRequestEntries",
