    "validation": {
        "enabled": true,
        "max_retries": 3
    },
    "metrics": {
        "enabled": true,
        "interval": 10
    },
    "connection": {
        "timeout_ms": 30000,
        "retry_writes": true,
        "retry_reads": true,
        "max_pool_size": 100,
        "min_pool_size": 10
    },
    "phi_collections": [
        "AD_Container_20250821_1k",
        "AD_Patients_20250821_1k"
