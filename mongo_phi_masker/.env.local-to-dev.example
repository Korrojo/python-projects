# LOCAL to DEV Environment Configuration
# Copy this to .env.local-to-dev and update with your actual credentials

# Source: LOCAL MongoDB (where your test PHI data is)
MONGO_SOURCE_HOST=localhost
MONGO_SOURCE_PORT=27017
MONGO_SOURCE_USER=
MONGO_SOURCE_PASSWORD=
MONGO_SOURCE_DB=local_test_db
MONGO_SOURCE_COLL=Patients
MONGO_SOURCE_AUTH_DB=admin
MONGO_SOURCE_USE_SSL=false
MONGO_SOURCE_USE_SRV=false

# Destination: DEV MongoDB (where masked data will go)
MONGO_DEST_HOST=dev-mongo-server.example.com
MONGO_DEST_PORT=27017
MONGO_DEST_USER=dev_user
MONGO_DEST_PASSWORD=your_dev_password_here
MONGO_DEST_DB=dev_test_db
MONGO_DEST_COLL=Patients_Masked
MONGO_DEST_AUTH_DB=admin
MONGO_DEST_USE_SSL=true
MONGO_DEST_USE_SRV=false

# Processing Configuration (start small for testing)
BATCH_SIZE=50
PROCESSING_DOC_LIMIT=100

# Email Alerts (disable for local testing)
EMAIL_ENABLED=false
EMAIL_SENDER=
EMAIL_PASSWORD=
EMAIL_RECIPIENT=
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# Logging
MONGO_PHI_LOG_LEVEL=DEBUG
MONGO_PHI_LOG_MAX_BYTES=10485760
MONGO_PHI_LOG_BACKUP_COUNT=5
MONGO_PHI_LOG_TIMED_ROTATION=false

# Verification (optional - for running verification scripts)
MONGO_VERIFY_URI=mongodb://dev_user:your_dev_password_here@dev-mongo-server.example.com:27017/dev_test_db?authSource=admin&ssl=true
